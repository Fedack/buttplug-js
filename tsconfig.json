{
  "compilerOptions" : {
    "lib": ["ES2015", "dom"],
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "outDir": "build"
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ]
}
